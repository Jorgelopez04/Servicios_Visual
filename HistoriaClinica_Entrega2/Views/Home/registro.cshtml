
@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@{ 
    
}

<html>
<head>
    <title>Registro</title>
    <link rel="stylesheet" href="~/Content/PersonaVista.css" />
</head>
<body>
    <div>
        <h3>Datos Personales del Cliente</h3>
        @if (!string.IsNullOrEmpty(ViewBag.Notificacion))
        {
            <div class="alert alert-danger">@ViewBag.Notificacion</div>
        }
        @using (Html.BeginForm("mostrarRegistro", "Home", FormMethod.Post))
        {
            <table>
                <tr>
                    <td><label> * Identificación:  </label></td>
                    <td><input type="text" name="id" pattern="[0-9]+" oninput="this.value=this.value.replace(/[^0-9]/g,'');" value=" " /></td>
                </tr>
                <tr>
                    <td><label> * Nombre:  </label></td>
                    <td><input type="text" name="nombre" pattern="[a-zA-Z.,:;()¿?¡! ñ]+" required /></td>
                </tr>
                <tr>
                    <td><label> * Apellidos:  </label></td>
                    <td><input type="text" name="apellidos" pattern="[a-zA-Z.,:;()¿?¡! ñ]+" required /></td>
                </tr>
                <tr>
                    <td><label> * Fecha de nacimiento:  </label></td>
                    <td><input type="date" name="fhNacimiento" value="" style="width: 300px;" required /></td>
                </tr>
                <tr>
                    <td><br /></td>
                    <td></td>
                </tr>
                <tr>
                    <td><br /></td>
                    <td></td>
                </tr>
                <tr>
                    <td><label> * Tipo de Estato:  </label></td>
                    <td>
                        <select name="estrato" style="width: 300px;">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><br /></td>
                    <td></td>
                </tr>
                <tr>
                    <td><label> * Meta de Ahorro de Energia:  </label></td>
                    <td><input type="text" name="metaAhorroEnergia" pattern="[0-9]+" oninput="this.value=this.value.replace(/[^0-9]/g,'');" value=" " /></td>
                </tr>
                <tr>
                    <td><br /></td>
                    <td></td>
                </tr>
                <tr>
                    <td><label> * Consumo Actual de Energia:  </label></td>
                    <td><input type="text" name="consumoActualEnergia" pattern="[0-9]+" oninput="this.value=this.value.replace(/[^0-9]/g,'');" value=" " /></td>
                </tr>
                <tr>
                    <td><br /></td>
                    <td></td>
                </tr>
                <tr>
                    <td><label>* Promedio del consumo de Agua:</label></td>
                    <td><input type="text" name="promedioConsumoAgua" pattern="[0-9]+" oninput="this.value=this.value.replace(/[^0-9]/g,'');" value=" " /></td>
                </tr>
                <tr>
                    <td><label>* Consumo Actual del Agua:</label></td>
                    <td><input type="text" name="consumoActualAgua" pattern="[0-9]+" oninput="this.value=this.value.replace(/[^0-9]/g,'');" value=" " /></td>
                </tr>
                <tr>
                    <td><label>* Consumo del gas:</label></td>
                    <td><input type="text" name="consumoGas" pattern="[0-9]+" oninput="this.value=this.value.replace(/[^0-9]/g,'');" value=" " /></td>
                </tr>               

            </table>
            <tr>
                <td><input type="submit" name="enviar" value="Enviar" /></td>
            </tr>
        }


    </div>
</body>
</html>

